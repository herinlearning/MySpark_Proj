--Initial load
sqoop import \
  --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username=lcdbdata \
  --password <hidden> \
  --table departments \
  --as-textfile \
  --target-dir=/user/lcd/sqoop_import/sqoop_merge/departments








--Validate
sqoop eval --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username lcdbdata \
  --password <hidden> \
  --query "select * from departments"

hadoop fs -cat /user/lcd/sqoop_import/sqoop_merge/departments/part*


--update
sqoop eval --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username lcdbdata \
  --password <hidden> \
  --query "update departments set department_name='Testing Merge' where department_id = 9000"


--Insert
sqoop eval --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username lcdbdata \
  --password <hidden> \
  --query "insert into departments values (10000, 'Inserting for merge')"


sqoop eval --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username lcdbdata \
  --password <hidden> \
  --query "select * from departments"



--New load
sqoop import \
  --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username=lcdbdata \
  --password <hidden> \
  --table departments \
  --as-textfile \
  --target-dir=/user/lcd/sqoop_import/sqoop_merge/departments_delta \
  --where "department_id = 9000"

hadoop fs -cat /user/lcd/sqoop_import/sqoop_merge/departments_delta/part*

--Merge
sqoop merge --merge-key department_id \
  --new-data /user/lcd/sqoop_import/sqoop_merge/departments_delta \
  --onto /user/lcd/sqoop_import/sqoop_merge/departments \
  --target-dir /user/lcd/sqoop_import/sqoop_merge/departments_stage \
  --class-name departments \
  --jar-file <get_it_from_last_import>

hadoop fs -cat /user/lcd/sqoop_import/sqoop_merge/departments_stage/part*

--Delete old directory
hadoop fs -rm -R /user/lcd/sqoop_import/sqoop_merge/departments

--Move/rename stage directory to original directory
hadoop fs -mv /user/lcd/sqoop_import/sqoop_merge/departments_stage /user/lcd/sqoop_import/sqoop_merge/departments

--Validate that original directory have merged data
hadoop fs -cat /user/lcd/sqoop_import/sqoop_merge/departments/part*

--Merge process ends




num-mappers = -m
divide the primary key into m range and upload in different mappers

without primary keys - use split-by where it do not primary key to introduce parallelism
--check-column
--incremental
--last-value




sqoop import \
--connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
--username=lcdbdata \
--password <hidden> \
--query="select * from orders join order_items on orders.order_id = order_items.order_item_order_id where \$CONDITIONS"  \
--split-by order_id \
--num-mappers 6 \
--target-dir /user/lcd/sqoop_import/order_item_join_import_2/ \
--fields-terminated-by '^' \
--lines-terminated-by '\n' \
--outdir java_files \
--where "order_id <10000"



