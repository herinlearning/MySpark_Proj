// Delta  Load
// Filtering
// Getting delta (--where)

sqoop import \
  --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username=lcdbdata \
  --password <hidden> \
  --table departments \
  --target-dir /user/hive/warehouse/lcdbdata_ods.db/departments \
  --append \
  --fields-terminated-by '|' \
  --lines-terminated-by '\n' \
  --split-by department_id \
  --where "department_id  7" \
  --outdir java_files
  --null-non-string -1


=================================================================================================================================================================================================================================

-- Incremental load

// --check-column
// --incremental append
// --last-value 7



sqoop import \
  --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username=lcdbdata \
  --password <hidden> \
  --table departments \
  --target-dir /user/hive/warehouse/lcdbdata_ods.db/departments \
  --append \
  --fields-terminated-by '|' \
  --lines-terminated-by '\n' \
  --check-column "department_id" \
  --incremental append \
  --last-value 7 \
  --outdir java_files



sqoop job --create sqoop_job \
  -- import \
  --connect "jdbc:oracle://gw01367.am.hedani.net/lcdb" \
  --username=lcdbdata \
  --password <hidden> \
  --table departments \
  --target-dir /user/hive/warehouse/lcdbdata_ods.db/departments \
  --append \
  --fields-terminated-by '|' \
  --lines-terminated-by '\n' \
  --check-column "department_id" \
  --incremental append \
  --last-value 7 \
  --outdir java_files


